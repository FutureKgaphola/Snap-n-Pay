
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@mipmap/snapcard"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sorry for such an experince with your account"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:textColor="@android:color/black"
            android:fontFamily="casual"
        />
        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_margin="6dp"
        android:elevation="5dp"
        android:background="@drawable/card_view"
        android:layout_gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lets try to get your account back"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="@android:color/black"
            android:fontFamily="casual"
        />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColorHint="@android:color/black"
                android:id="@+id/textInputLayout2"
                
              >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:id="@+id/user_name"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:drawableLeft="@drawable/ic_person_white_18dp"
                    android:drawableTint="@android:color/black"
                    android:hint="Email address"
                    android:textSize="15sp"
                />
  
            </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:text="sent"
            android:id="@+id/proccedrset"
            android:textSize="12sp"
        />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:id="@+id/progBar"
            android:visibility="gone"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        </LinearLayout>

</FrameLayout>